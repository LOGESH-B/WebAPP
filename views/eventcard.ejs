

<%- layout("boiler")-%>

<%- include("nav")-%>
<%- include("clubnav")-%>
<%- include("flash")-%>

<link rel="stylesheet" href="/css/event.css">
<%console.log('hii'+ found) %> 
<div class="club-card" style="color: white;">
<div class="container">
<h1 class="text-center py-3 head "><%=found.clubname%> </h1>
<p class="text-center"><%=found.discription%></p>
  
  
  <h3 class="text-center mt-5 head">Events </h3>
  <hr>
  
</div>

 
<div class="container">
<ul class="cards ">
  <div class="row d-flex justify-content-center">
    <% if (found.events.length!=0) { %>
    
  <% for(let event of found.events){ %>
   
      <div class="col-lg-4 ">
    <li>
      <form action="/club/<%=found.clubname%>/<%= event._id%>" class="card events" method="get">
        <% for(let img of event.images) { %>
          <img src="<%=img.url%> " class="card__image"/>
        
        <% } %>
        
        <div class="card__overlay">
          <div class="card__header">
            <svg class="card__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>    
            <% for(let img of found.images) { %>
              <img class="card__thumb" src="<%=img.url%>" alt="" />
            
            <% } %>                 
            
            <div class="card__header-text">
              <h3 class="card__title"><%= event.eventname  %></h3>     
              <span class="card__status"><%= event.eventdate %> |</span>       
              <span class="card__status"><%= event.enddate %></span>
            </div>
          </div>
          <p class="card__description"><button type="submit" class="btn  view"  >View Event</button></p>
          
        </div>
        
    
      </form>     
    </li>
  </div>
  <% } %>
  <% }else { %>
 
    <h1 class="" style="color: rgb(204, 196, 196);">Coming soon
      <div class="spinner-grow text-light" style="height: 1rem;width: 1rem;" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
    <div class="spinner-grow text-light" style="height: 1rem;width: 1rem;" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
    <div class="spinner-grow text-light" style="height: 1rem;width: 1rem;" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
  </h1>
    <% } %>
   
</div>
  </ul>
  <% found.author.forEach(element => { %>
    <% if (element==currentUser.username) { %>
      <form action="/newclub" method="get">
        <a href="/club/<%=found.clubname%>/add" class="float" >
          <i class="fa fa-plus my-float"></i>
          </a>
        
      </form>
  
      <% } %> 
   
  <% }) %>

 


</div>

<div class="container mt-5 pb-5">
  <hr>
  <h3 class="text-center mt-5 head">Support</h3>
  <div class="row pt-5 d-flex justify-content-around text-center">
    <div class="col-lg-6">
      <h5 > <span class="fw-bold">Staff-Coordinator :<br></span><span> <%=found.stfcoordinators%> </span></h5>
      <h6 >Contact: <%=found.author[0]%></h6>
    </div>
    <div class="col-lg-6">
      <h5><span class="fw-bold">Student-Coordinator : <br></span><span > <%=found.stucoordinators%> </span></h5>
      <h6>Contact: <%=found.author[1]%></h6>
    </div>
  </div>
</div>

<%- include("footer") -%> 

</div>
 